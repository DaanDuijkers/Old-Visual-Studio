@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h3>Login Form</h3>
@Model.MSG
<form method="POST" asp-page="Index">
    <table>
        <tr>
            <td>Username</td>
            <td><input type="text" asp-for="@Model.Username" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="text" asp-for="@Model.Password" /></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><input type="submit" value="Login" /></td>
        </tr>
    </table>
</form>